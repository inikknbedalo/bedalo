---
import { Image } from 'astro:assets';
const { item, allImages, slug } = Astro.props;

// --- CHANGE IS HERE ---
const imagePath = Object.keys(allImages).find(path => path.endsWith(item.coverImage));
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col transition-shadow hover:shadow-xl">
    {imagePath ?
(
        <Image
            src={allImages[imagePath]()}
            alt={item.altText}
            width="800"
            height="500"
            class="w-full h-64 object-cover"
        />
    ) : <div class="w-full h-64 bg-gray-200"></div>}
    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-2xl font-bold text-gray-800 mb-2">{item.judul}</h3>
        <p class="text-gray-600 mb-4 flex-grow">{item.deskripsi}</p>
        
        <div class="mt-auto pt-4">
            <a href={`/pariwisata/${slug}`} class="inline-block w-full text-center bg-blue-600 text-white px-4 py-2 rounded-md font-semibold hover:bg-blue-700 transition duration-300">
                Lihat Detail
            </a>
        </div>
    </div>
</div>
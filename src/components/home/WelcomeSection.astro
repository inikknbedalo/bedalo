---
import { Image } from 'astro:assets';
const { profile, allImages } = Astro.props;

const imagePath = Object.keys(allImages).find(path => path.endsWith(profile.fotoUrl));
---
<section id="profil" class="py-20 bg-white overflow-hidden">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row items-center gap-12">
            <div class="md:w-1/3 text-center" data-aos="fade-right">
                <div class="w-48 h-48 md:w-64 md:h-64 rounded-full mx-auto overflow-hidden shadow-lg border-4 border-white">
                    {imagePath ? (
                        <Image src={allImages[imagePath]()} alt={`Foto ${profile.namaKepalaDusun}`} width="256" height="256" class="w-full h-full object-cover" />
                    ) : <div class="w-full h-full bg-gray-200"></div>}
                </div>
                <h2 class="mt-4 text-xl font-bold text-gray-800">{profile.namaKepalaDusun}</h2>
                <p class="text-gray-500">{profile.jabatan}</p>
            </div>
            <div class="md:w-2/3" data-aos="fade-left" data-aos-delay="200">
                <h2 class="text-3xl font-bold text-gray-800 mb-4">Sambutan Hangat dari Kami</h2>
                <div class="text-gray-600 leading-relaxed space-y-4">
                    {profile.sambutan.map((p: string) => <p>{p}</p>)}
                </div>
                <a href="/profil" class="mt-6 inline-block text-blue-600 font-semibold hover:underline">
                    Lihat Profil Lengkap & Sejarah Dusun &rarr;
                </a>
            </div>
        </div>
    </div>
</section>
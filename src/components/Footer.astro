---
// 1. Impor data dari file JSON terpusat
import data from '../data/footer.json';

const copyrightYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-300">
    <div class="container mx-auto px-6 pt-16 pb-8 lg:px-8">
        
        <div class="flex flex-col items-center justify-between gap-8 border-b border-slate-700 pb-10 md:flex-row">
            <div class="text-center md:text-left">
                <h2 class="text-3xl font-bold text-white">Dusun Bedalo</h2>
                <p class="mt-2 max-w-md text-slate-400">
                    {data.address}
                </p>
            </div>
            <div>
                <a href="/kontak#aspirasi" class="inline-block rounded-lg bg-blue-600 px-6 py-3 font-semibold text-white shadow-md transition-transform duration-300 hover:scale-105 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                    Sampaikan Aspirasi Anda
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-8 py-10 sm:grid-cols-2 lg:grid-cols-4">
            <div>
                <h3 class="text-base font-semibold tracking-wider text-white">Tautan Langsung</h3>
                 <ul class="mt-4 space-y-3">
                    {data.mainLinks.map(link => (
                        <li>
                            <a href={link.href} class="hover:text-blue-400 transition-colors duration-300">{link.text}</a>
                         </li>
                    ))}
                </ul>
            </div>

            <div>
                <h3 class="text-base font-semibold tracking-wider text-white">Tentang Kami</h3>
                 <ul class="mt-4 space-y-3">
                    {data.aboutLinks.map(link => (
                        <li>
                            <a href={link.href} class="hover:text-blue-400 transition-colors duration-300">{link.text}</a>
                         </li>
                    ))}
                </ul>
            </div>

            <div class="lg:col-span-2">
                <h3 class="text-base font-semibold tracking-wider text-white">Hubungi Kami</h3>
                 <ul class="mt-4 space-y-4">
                    <li class="flex items-center gap-x-3">
                        <i class="fa-solid fa-envelope w-5 text-center text-slate-400"></i>
                        <a href={`mailto:${data.email}`} class="hover:text-blue-400 transition-colors duration-300">{data.email}</a>
                     </li>
                    <li class="flex items-center gap-x-3">
                        <i class="fa-solid fa-phone w-5 text-center text-slate-400"></i>
                        <span>{data.phone}</span>
                     </li>
                </ul>
            </div>
        </div>
        
        <div class="mt-8 border-t border-slate-700 pt-8 text-center">
            <div class="flex flex-wrap justify-center gap-x-6 gap-y-4">
                {data.socialLinks.map(social => (
                    <a href={social.href} aria-label={social.label} class="text-slate-400 transition-all duration-300 hover:scale-110 hover:text-blue-400">
                        <i class={`${social.iconClass} text-2xl`}></i>
                    </a>
                ))}
             </div>
            <p class="mt-6 text-sm text-slate-500">
                Â© {copyrightYear} Website Dusun Bedalo oleh Mahasiswa KKN 117 UIN Sunan Kalijaga Yogyakarta.
            </p>
        </div>
    </div>
</footer>
---
import { Image } from 'astro:assets';
interface Props {
    item: any;
    allImages: any;
    slug: string; // Add slug to props
}
const { item, allImages, slug } = Astro.props;

const imagePath = Object.keys(allImages).find(path => path.endsWith(item.gambarUrl));
---
<div class="bg-white h-full rounded-lg shadow-lg overflow-hidden flex flex-col transition-shadow hover:shadow-xl">
    {imagePath ?
(
        <a href={`/potensi/${slug}`} class="block">
            <Image
                src={allImages[imagePath]()}
                alt={item.altText}
                width="600"
                height="400"
                class="w-full h-48 object-cover"
            />
        </a>
    ) : <div class="w-full h-48 bg-gray-200"></div>}


     <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-xl font-bold text-gray-800 mb-2">
            <a href={`/potensi/${slug}`} class="hover:text-blue-600 transition-colors">{item.judul}</a>
        </h3>
        <p class="text-gray-600 mb-4 text-sm flex-grow line-clamp-3">{item.deskripsi}</p>

        <div class="pt-4 mt-auto border-t">
            <div class="flex justify-between items-center mb-4">
                <p class="text-sm text-gray-500">Harga:</p>
                <span
 class="text-lg font-bold text-green-600">{item.harga}</span>
            </div>
            <div class="grid grid-cols-1 gap-3">
                <a
                    href={`/potensi/${slug}`}
                    class="flex items-center justify-center gap-2 text-sm font-bold text-white bg-blue-600 px-3 py-2 rounded-md hover:bg-blue-700 transition-colors"
                >
                    Lihat Detail Produk
                </a>
            </div>
        </div>
    </div>
</div>
---
import { Image } from 'astro:assets';
interface Props {
    item: any;
    allImages: any;
}
const { item, allImages } = Astro.props;

const imagePath = Object.keys(allImages).find(path => path.endsWith(item.gambarUrl));
---
<div class="bg-white h-full rounded-lg shadow-lg overflow-hidden flex flex-col transition-shadow hover:shadow-xl">
    {imagePath ? (
        <Image 
            src={allImages[imagePath]()} 
            alt={item.altText} 
            width="600" 
            height="400" 
            class="w-full h-48 object-cover" 
        />
    ) : <div class="w-full h-48 bg-gray-200"></div>}
    
    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-xl font-bold text-gray-800 mb-2">{item.judul}</h3>
        <p class="text-gray-600 mb-4 text-sm flex-grow line-clamp-3">{item.deskripsi}</p>
        
        <div class="pt-4 mt-auto border-t">
            <div class="flex justify-between items-center mb-4">
                <p class="text-sm text-gray-500">Harga:</p>
                <span class="text-lg font-bold text-green-600">{item.harga}</span>
            </div>
            <div class="grid grid-cols-2 gap-3">
                <a 
                    href={item.kontakLink} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="flex items-center justify-center gap-2 text-sm font-bold text-white bg-green-500 px-3 py-2 rounded-md hover:bg-green-600 transition-colors"
                >
                    <i class="fab fa-whatsapp"></i> Hubungi
                </a>
                <a 
                    href={item.petaLink} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="flex items-center justify-center gap-2 text-sm font-bold text-white bg-gray-600 px-3 py-2 rounded-md hover:bg-gray-700 transition-colors"
                >
                    <i class="fas fa-map-marker-alt"></i> Peta
                </a>
            </div>
        </div>
    </div>
</div>
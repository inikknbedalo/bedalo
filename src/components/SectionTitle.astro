---
interface Props {
    title: string;
    subtitle?: string; // Subtitle is now an optional string
}

const { title, subtitle } = Astro.props;
---
<div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-gray-800 mb-2" data-aos="fade-up">
        {title}
    </h2>
    {subtitle && (
        <p class="text-gray-600 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
            {subtitle}
        </p>
    )}
</div>
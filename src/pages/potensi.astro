---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageBanner from '../components/PageBanner.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Card from '../components/Card.astro'; // <-- Import the new Card component
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import data from '../data/potensi.json';

const allImages = await import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/**/*.{jpeg,jpg,png,gif,webp,svg}');
const pertanianImagePath = Object.keys(allImages).find(path => path.endsWith(data.pertanian.gambarUrl));
const umkmEntries = await getCollection('potensi');

interface KomoditasItem {
    nama: string;
    icon: string;
}
interface LainnyaItem {
    icon: string;
    judul: string;
    deskripsi: string;
}
---
<Layout
    title="Potensi | Website Dusun Bedalo"
    description="Temukan potensi unggulan Dusun Bedalo, mulai dari produk UMKM kreatif, hasil pertanian dan perkebunan, hingga sumber daya alam dan manusianya."
>
    <Header currentPage="Potensi" />
    <main>
        <PageBanner
            title="Potensi Dusun Bedalo"
            subtitle="Sumber Daya dan Kreativitas Warga"
            bgColor="bg-green-600"
        />
        <section id="umkm" class="py-20 bg-white overflow-hidden">
            <div class="container mx-auto px-6">
                 <SectionTitle
                    title="UMKM & Produk Unggulan"
                    subtitle="Karya kreatif dan produk olahan dari tangan-tangan terampil warga Dusun Bedalo."
                />
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    {umkmEntries.map((entry: CollectionEntry<'potensi'>, index: number) => (
                        <div data-aos="fade-up" data-aos-delay={100 + index * 50}>
                           <Card
                                title={entry.data.judul}
                                description={entry.data.deskripsi}
                                imageUrl={entry.data.gambarUrl}
                                altText={entry.data.altText}
                                linkUrl={`/potensi/${entry.slug}`}
                                linkText="Lihat Detail Produk"
                                price={entry.data.harga}
                                allImages={allImages}
                           />
                        </div>
                    ))}
                </div>
            </div>
         </section>

        <section id="pertanian" class="py-20">
            <div class="container mx-auto px-6">
                <SectionTitle title="Pertanian & Perkebunan" />
                <div class="flex flex-col md:flex-row items-center gap-12">
                    <div class="md:w-1/2" data-aos="fade-right">
                         {pertanianImagePath ? (
                            <Image
                                src={allImages[pertanianImagePath]()}
                                alt={data.pertanian.altText}
                                 width="800"
                                height="600"
                                class="rounded-lg shadow-xl w-full h-full object-cover"
                             />
                        ) : <div class="w-full h-96 bg-gray-200 rounded-lg shadow-xl"></div>}
                    </div>
                    <div class="md:w-1/2" data-aos="fade-left">
                         <h3 class="text-2xl font-bold text-gray-800 mb-4">{data.pertanian.judul}</h3>
                        <p class="text-gray-600 leading-relaxed mb-6">{data.pertanian.deskripsi}</p>
                        <h4 class="font-semibold text-gray-800 mb-3">Komoditas Utama:</h4>
                         <div class="grid grid-cols-2 gap-4 text-gray-700">
                            {data.pertanian.komoditas.map((k: KomoditasItem) => (
                                <div class="flex items-center gap-3 bg-gray-100 p-3 rounded-md">
                                     <i class={k.icon}></i> {k.nama}
                                </div>
                            ))}
                        </div>
                     </div>
                </div>
            </div>
        </section>

        <section id="lainnya" class="py-20 bg-white overflow-hidden">
            <div class="container mx-auto px-6">
                <SectionTitle title="Potensi Lainnya" />
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
                    {data.lainnya.map((item: LainnyaItem, index: number) => (
                        <div class="text-center p-8 bg-gray-50 rounded-lg hover:shadow-lg transition-shadow border border-gray-200" data-aos="fade-up" data-aos-delay={100 + index * 100}>
                             <i class={item.icon}></i>
                            <h4 class="text-xl font-bold text-gray-800 my-2">{item.judul}</h4>
                            <p class="text-gray-600 text-sm">{item.deskripsi}</p>
                        </div>
                     ))}
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
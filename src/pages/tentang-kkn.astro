---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import data from '../data/tentang-kkn.json';
// 1. Import the new MemberCard component
import MemberCard from '../components/MemberCard.astro';
---
<Layout title={`${data.judulHalaman.judul} | Website Dusun Bedalo`}>
    <Header currentPage="Tentang KKN" />
    <main>
        {/* ... other sections ... */}
        <section class="py-20 overflow-hidden">
            <div class="container mx-auto px-6">
                <h2 class="text-3xl font-bold text-center text-gray-800 mb-12" data-aos="fade-up">{data.anggota.judul}</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 max-w-5xl mx-auto">
                    {data.anggota.tim.map((item, index) => (
                        <div data-aos="fade-up" data-aos-delay={100 + (index * 50)}>
                            {/* 3. Use the new component and pass the member data */}
                            <MemberCard member={item} />
                        </div>
                    ))}
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>
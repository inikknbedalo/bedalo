---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageBanner from '../components/PageBanner.astro';
import SectionTitle from '../components/SectionTitle.astro';
import StatCard from '../components/StatCard.astro';
import PersonCard from '../components/PersonCard.astro';
import { getEntry, getCollection } from 'astro:content';
import type { ImageMetadata } from 'astro';

const allPersonImages = await import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/**/*.{jpeg,jpg,png,gif,webp,svg}');

const profilEntry = await getEntry('profil', 'index');
const strukturPemerintahan = (await getCollection('struktur')).sort((a, b) => a.data.order - b.data.order);

if (!profilEntry) {
    throw new Error("Tidak dapat menemukan entri profil. Pastikan 'src/content/profil/index.md' ada.");
}

const { Content } = await profilEntry.render();
const profilData = profilEntry.data;
---
<Layout 
    title="Profil | Website Dusun Bedalo"
    description="Kenali lebih dekat Dusun Bedalo melalui sejarah, visi & misi, struktur pemerintahan, serta data demografi terbaru kami."
>
    <Header currentPage="Profil" />
    <main>
        <PageBanner title="Profil Dusun Bedalo" subtitle="Mengenal Lebih Dekat Dusun Kami" bgColor="bg-blue-600" />
        
        <section id="sejarah" class="py-20 bg-white overflow-hidden">
            <div class="container mx-auto px-6">
                <SectionTitle title="Sejarah & Asal-Usul" />
                <div 
                    class="prose max-w-4xl mx-auto text-gray-600 leading-relaxed text-justify" 
                    data-aos="fade-up"
                >
                    <Content />
                </div>
            </div>
        </section>
        <section id="visimisi" class="py-20 overflow-hidden">
             <div class="container mx-auto px-6">
                <SectionTitle title="Visi & Misi" />
                <div class="flex flex-col md:flex-row gap-10 max-w-5xl mx-auto">
                    <div class="md:w-1/2 bg-white p-8 rounded-lg shadow-lg" data-aos="fade-right">
                         <h3 class="text-2xl font-bold text-gray-800 mb-4 text-center">Visi</h3>
                        <p class="text-gray-600 italic text-center">{profilData.visi}</p>
                    </div>
                    <div class="md:w-1/2 bg-white p-8 rounded-lg shadow-lg" data-aos="fade-left" data-aos-delay="100">
                         <h3 class="text-2xl font-bold text-gray-800 mb-4 text-center">Misi</h3>
                        <ul class="list-disc list-inside text-gray-600 space-y-2">
                            {profilData.misi.map(item => <li>{item}</li>)}
                         </ul>
                    </div>
                </div>
            </div>
        </section>
        <section id="struktur" class="py-20 bg-white overflow-hidden">
            <div class="container mx-auto px-6">
                 <SectionTitle title="Struktur Pemerintahan Dusun" />
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8">
                    {strukturPemerintahan.map((item, index) => (
                        <div data-aos="zoom-in" data-aos-delay={100 + index * 100}>
                             <PersonCard 
                                nama={item.data.nama}
                                jabatan={item.data.jabatan}
                                fotoUrl={item.data.fotoUrl}
                                allImages={allPersonImages}
                            />
                        </div>
                     ))}
                </div>
            </div>
        </section>
        <section id="demografi" class="py-20 overflow-hidden">
            <div class="container mx-auto px-6">
                <SectionTitle title="Data Demografi" />
                <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
                    <StatCard label="Jumlah Penduduk" value={profilData.demografi.jumlahPenduduk} delay={100}>
                        <i class="fas fa-users text-4xl text-blue-500" slot="icon"></i>
                    </StatCard>
                     <StatCard label="Laki-laki" value={profilData.demografi.lakiLaki} delay={200}>
                        <i class="fas fa-male text-4xl text-blue-500" slot="icon"></i>
                    </StatCard>
                    <StatCard label="Perempuan" value={profilData.demografi.perempuan} delay={300}>
                         <i class="fas fa-female text-4xl text-pink-500" slot="icon"></i>
                    </StatCard>
                    <div class="bg-white p-6 rounded-lg shadow-lg text-center md:col-span-3" data-aos="fade-up" data-aos-delay="400">
                        <i class="fas fa-briefcase text-4xl text-green-500 mb-3"></i>
                         <h4 class="text-xl font-bold text-gray-800 mb-2">Mata Pencaharian Utama</h4>
                        <p class="text-gray-600">{profilData.demografi.mataPencaharian.join(', ')}</p>
                    </div>
                </div>
            </div>
        </section>
        <section id="peta" class="py-20 bg-white overflow-hidden">
             <div class="container mx-auto px-6">
                <SectionTitle title="Peta Wilayah Dusun" />
                <div class="w-full h-96 bg-gray-200 rounded-lg shadow-lg overflow-hidden" data-aos="zoom-in">
                    <iframe 
                        src={profilData.petaUrl} 
                        width="100%" 
                        height="100%" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade" 
                        title="Peta Dusun Bedalo">
                    </iframe>
                </div>
             </div>
        </section>
    </main>
    <Footer />
</Layout>
<style>
/* Tambahkan ini untuk memastikan pemformatan dasar pada konten Markdown */
.prose p {
    margin-bottom: 1em;
}
</style>